<div id="block-forms" class="block">
	<div class="secondary-navigation">
	</div>

	<div class="content">
		<h2>Editando Cargo</h2>
		<div class="inner">
			<% form_for(@role) do |f| %>
			  <%= f.error_messages %>

			  <p>
			    <%= f.label :name, 'Nome' %><br />
			    <%= f.text_field :name %>
			  </p>

			  <p>
			    <%= f.submit 'Atualizar' %>
			  </p>
			<% end %>

			<%= link_to 'Voltar', roles_path %>
		</div>
	</div>
</div>